# Configuration MySQL optimisée pour Spatial Research Lab
# Environnement: Production

[mysqld]

# Identification
user = mysql
pid-file = /var/run/mysqld/mysqld.pid
socket = /var/run/mysqld/mysqld.sock
port = 3306
basedir = /usr
datadir = /var/lib/mysql
tmpdir = /tmp
lc-messages-dir = /usr/share/mysql

# Réseau
bind-address = 0.0.0.0
skip-name-resolve

# Encodage
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
init-connect = 'SET NAMES utf8mb4'

# Performance - Mémoire
# Ajuster selon la RAM disponible (exemple pour 4GB)
innodb_buffer_pool_size = 1G
innodb_log_file_size = 256M
innodb_log_buffer_size = 16M
innodb_flush_log_at_trx_commit = 2
innodb_flush_method = O_DIRECT

# Performance - Cache
query_cache_type = 1
query_cache_size = 64M
query_cache_limit = 2M

# Performance - Connexions
max_connections = 200
max_connect_errors = 100000
connect_timeout = 60
wait_timeout = 600
interactive_timeout = 600

# Performance - Tables temporaires
tmp_table_size = 64M
max_heap_table_size = 64M

# Performance - Autres
table_open_cache = 2000
table_definition_cache = 1000
thread_cache_size = 16
sort_buffer_size = 2M
read_buffer_size = 2M
read_rnd_buffer_size = 4M
join_buffer_size = 2M

# InnoDB spécifique
innodb_file_per_table = 1
innodb_open_files = 2000
innodb_thread_concurrency = 0
innodb_read_io_threads = 4
innodb_write_io_threads = 4
innodb_purge_threads = 1
innodb_io_capacity = 200
innodb_io_capacity_max = 2000
innodb_lru_scan_depth = 1000

# Logs
log-error = /var/log/mysql/error.log
slow_query_log = 1
slow_query_log_file = /var/log/mysql/mysql-slow.log
long_query_time = 2
log_queries_not_using_indexes = 1
log_throttle_queries_not_using_indexes = 10

# Binary Log (pour la réplication et les sauvegardes)
server-id = 1
log_bin = /var/log/mysql/mysql-bin.log
expire_logs_days = 10
max_binlog_size = 100M
binlog_format = ROW
binlog_row_image = minimal

# Sécurité
local-infile = 0
symbolic-links = 0
skip-external-locking

# Réplication
read_only = 0
super_read_only = 0

# Optimisations spécifiques pour Spatial Research Lab

# Augmentation des limites pour les données JSON
max_allowed_packet = 256M

# Optimisation pour les requêtes complexes
optimizer_search_depth = 0

# Meilleure gestion des jointures
join_buffer_space_limit = 128M

# Performance des tris
max_length_for_sort_data = 4096
max_sort_length = 1024

# Cache des requêtes préparées
query_prealloc_size = 32768
query_alloc_block_size = 8192

# InnoDB avancé
innodb_adaptive_hash_index = 1
innodb_adaptive_flushing = 1
innodb_adaptive_flushing_lwm = 10
innodb_change_buffering = all
innodb_stats_on_metadata = 0
innodb_stats_persistent = 1
innodb_stats_auto_recalc = 1
innodb_stats_persistent_sample_pages = 20
innodb_buffer_pool_dump_at_shutdown = 1
innodb_buffer_pool_load_at_startup = 1
innodb_buffer_pool_dump_pct = 25

# Locking
lock_wait_timeout = 300
innodb_lock_wait_timeout = 300

# Monitoring performance
performance_schema = 1
performance_schema_consumer_events_waits_current = 1
performance_schema_consumer_events_waits_history = 1
performance_schema_consumer_events_waits_history_long = 1

[mysql]
default-character-set = utf8mb4

[client]
default-character-set = utf8mb4
port = 3306
socket = /var/run/mysqld/mysqld.sock

[mysqld_safe]
log-error = /var/log/mysql/error.log
nice = 0
socket = /var/run/mysqld/mysqld.sock

[mysqldump]
quick
quote-names
max_allowed_packet = 256M
default-character-set = utf8mb4

[isamchk]
key_buffer = 16M

!includedir /etc/mysql/conf.d/